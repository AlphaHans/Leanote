<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/title_bar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/title_bar_margin_border"
        android:layout_marginStart="@dimen/title_bar_margin_border"
        android:textColor="@color/title_bar_text_color"
        android:textSize="@dimen/title_bar_text_sub_size"
        tools:text="取消" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/title_bar_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/title_bar_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_bar_text_color"
            android:textSize="@dimen/title_bar_text_title_size"
            tools:text="标题" />
    </LinearLayout>


    <TextView
        android:id="@+id/title_bar_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/title_bar_margin_border"
        android:layout_marginRight="@dimen/title_bar_margin_border"
        android:textColor="@color/title_bar_text_color"
        android:textSize="@dimen/title_bar_text_sub_size"
        tools:text="完成" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_hint_gray"></View>
</RelativeLayout>